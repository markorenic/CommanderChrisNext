{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation"]
    },
    {
      "title": "## ⚙️ Dependencies",
      "labels": ["dependencies"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n## 🧰 Other Changes\n\n${{UNCATEGORIZED}}",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in #${{NUMBER}}",
  "empty_template": "- No changes in this release",
  "transformers": [
    {
      "pattern": "[\\s\\S]*?(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\\([\\w\\s-]*\\))?:\\s*(.*)",
      "target": "- $3"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365
} 